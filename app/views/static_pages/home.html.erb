<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Лента новостей</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Добро пожаловать на <br> FVT App</h1>

	<h2>
		Начни делиться новостями со своими друзьями уже сейчас!
	</h2>

    <%= link_to "Зарегистрироваться!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>
<script>
  left = document.getElementById('size');
  area = document.getElementsByTagName('textarea')[0];
  area.oninput =  function dynamic() {
    length = 140 - area.value.length;
    left.innerHTML = "Characters left: " + length;
  }
</script>