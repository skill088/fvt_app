<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Введите текст публикации...", maxlength: "140" %>
  </div>
  <div id = "size">
  	Осталось символов: 140
  </div>
  <%= f.submit "Опубликовать", class: "btn btn-large btn-primary" %>
<% end %>